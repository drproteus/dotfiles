[user]
	name = Jake Goritski
	email = jgoritski@gmail.com
[http]
	sslVerify = false
[color]
    status = auto
    diff = auto
    branch = auto
    decorate = auto
    grep = auto
    interactive = auto
    ui = auto
    showbranch = auto
    pager = true
[push]
    default = simple
[core]
    editor = vim
	excludesfiles = ~/.gitignore
	excludesfile = ~/.gitignore
[branch]
    autosetuprebase = always
[merge]
    ff = no
[alias]
    merge-to = "!gitmergeto() { export tmp_branch=`git branch | grep '* ' | tr -d '* '` && git checkout $1 && git merge $tmp_branch && git checkout $tmp_branch; unset tmp_branch; }; gitmergeto"
    update-master = "!gitupdatemaster() { git fetch origin master:master; }; gitupdatemaster"
	today = !git log --since=midnight --author=\"$(git config user.name)\" --oneline
